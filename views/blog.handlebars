<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

  {{#if comment.length}}
  {{#each comment}}
  <p>{{body}}</p>
  <p>Created by {{username}} on {{format_date date_created}}</p>
  {{/each}}
  {{/if}}  

  <h2>Comment</h2>

  <form class="form comment-form">
    <div class="form-group">
      <input class="form-input" type="text-area" id="comment" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit" id="comment-btn">Submit</button>
    </div>
  </form>

</div>

<script src="./js/comment.js"></script>