<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

  {{#if comments.length}}
  {{#each comments as |comment|}}
  <p>{{comment.body}}</p>
  <p>Created by {{comment.username}} on {{format_date comment.date_created}}</p>
  {{/each}}
  {{/if}}  

  <h2>Comment</h2>

  <form class="form comment-form" data-id={{id}}>
    <div class="form-group">
      <input class="form-input" type="text" id="comment" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit" id="comment-btn">Submit</button>
    </div>
  </form>

</div>

<script src="/js/comment.js"></script>