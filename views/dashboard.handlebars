{{#if blogs.length}}
  <div class="col-md-6 Blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2 blog-list">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <h2>Create New Blog Post</h2>

  <form class="form blog-form">
    <div class="form-group">
      <p>Title:</p>
      <input class="form-input" type="text" id="name" />
    </div>
    <div class="form-group">
      <p>Content:</p>
      <input class="form-input" type="text" id="description" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit" id="blog-btn">Submit</button>
    </div>
  </form>

 <script src="/js/dashboard.js"></script>